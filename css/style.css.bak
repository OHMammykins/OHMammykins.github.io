body {
  font-family: Arial, Helvetica, sans-serif;
}

.mobile-container {
  /* max-width: 480px; */
  width: 99%;
  margin: auto;
  background-color: #555;
  height: 100vh;
  color: white;
  border-radius: 10px;
}

.topnav {
  overflow: hidden;
  background-color: #333;
  position: relative;
}

.topnav #myLinks {
  display: none;
}

.topnav a {
  color: white;
  /* padding: 14px 16px; */
  padding: 15px 5px;
  text-decoration: none;
  font-size: 17px;
  display: block;
}

.topnav a.icon {
  background: black;
  display: block;
  position: absolute;
  right: 0;
  top: 0;
}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.active {
  background-color: #04AA6D;
  color: white;
}

